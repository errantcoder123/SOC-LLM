from langchain_huggingface import HuggingFacePipeline, ChatHuggingFace
from dotenv import load_dotenv

load_dotenv()

chat_pipeline = HuggingFacePipeline(
    model_id="TinyLlama/TinyLlama-1.1B-Chat-v1.0",
    task="text-generation",
    pipeline_kwargs={
        "temperature": 0.5,
        "max_new_tokens": 100
    }
)

chatbot = ChatHuggingFace(llm=chat_pipeline)

response = chatbot.invoke("Please provide the capital city of India.")

print(response.content)
