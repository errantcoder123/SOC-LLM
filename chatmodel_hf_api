from langchain_huggingface import HuggingFaceEndpoint, ChatHuggingFace
from dotenv import load_dotenv


load_dotenv()

tiny_llama_endpoint = HuggingFaceEndpoint(
    repo_id="TinyLlama/TinyLlama-1.1B-Chat-v1.0",
    task="text-generation"
)

tiny_llama_chat = ChatHuggingFace(llm=tiny_llama_endpoint)

reply = tiny_llama_chat.invoke("Can you tell me the name of India's capital city?")

print(reply.content)
